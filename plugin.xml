<?xml version='1.0' encoding='UTF-8'?>
<plugin id="cordova-plugin-permissions" version="1.2.2" xmlns="http://apache.org/cordova/ns/plugins/1.0">
    <name>Plugin Permissions</name>
    <author>Andreas Jacob (http://cordobo.com/)</author>
    <description>Cordova / PhoneGap Plugin Permission Settings</description>
    <keywords></keywords>
    <license>MIT</license>
    <engines>
        <engine name="cordova" version=">=3.0.0"/>
        </engines>
        <platform name="ios">
          
             <preference name="BLUETOOTH_USAGE_DESCRIPTION" default="This app needs permission to use Bluetooth" />
            <config-file target="*-Info.plist" parent="NSBluetoothAlwaysUsageDescription">
              <string>$BLUETOOTH_USAGE_DESCRIPTION</string>
            </config-file> 
            
            
            
            
            
                        
        </platform>
    
    </plugin>
